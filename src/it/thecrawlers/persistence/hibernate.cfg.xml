<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.password">antani</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost/tripadvisor</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hbm2ddl.auto">create-drop</property>
  <property name="hibernate.show_sql">true</property>
  <mapping class="it.thecrawlers.model.Item"/>
  <mapping class="it.thecrawlers.model.Location"/>
  <mapping class="it.thecrawlers.model.Review"/>
 </session-factory>
</hibernate-configuration>
